<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1>Editing Book</h1>
<%= form_for(@post) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title, class: "book_title" %>
    <h4>Body</h4>
    <%= f.text_area :body, class: "book_body" %>
    <%= f.submit 'Update Book' %>
<% end %>
<%= link_to 'Show', post_path, class: "show_#{@post.id}" %>
<%= link_to 'Back', posts_path, class: "back" %>