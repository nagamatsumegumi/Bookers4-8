<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1>Editing Book</h1>
<%= form_for(@post) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
<% end %>
<%= link_to 'Show', posts_path %>
<%= link_to 'Back', posts_path, class: "back" %>
